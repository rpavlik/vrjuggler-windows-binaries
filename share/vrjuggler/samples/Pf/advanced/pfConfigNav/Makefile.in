# -----------------------------------------------------------------------------
# Makefile.in for vrjuggler/samples/Pf/advanced/pfBasicConfigNav.
# It requires GNU make.
# -----------------------------------------------------------------------------

all: pfBasicConfigNav@EXEEXT@

APP_NAME=	pfBasicConfigNav@EXEEXT@

# Basic options.
srcdir=		@srcdir@
COMMON_SRCS=	simplePfNavApp.cpp	\
		FileIO.cpp		\
		StopWatch.cpp		\
		collider.cpp		\
		navigator.cpp		\
		pfBoxCollider.cpp	\
		pfFileIO.cpp		\
		pfPogoCollider.cpp	\
		pfSoundNode.cpp		\
		pfSoundTraverser.cpp	\
		pfTerryCollide.cpp	\
		pfTerryPogoCollide.cpp	\
		pfTerryBoxCollide.cpp	\
		pfMPStats.cpp		\
		velocityNav.cpp

SRCS=		pfBasicConfigNav.cpp $(COMMON_SRCS)

EXTRA_PATH_FOR_SOURCES=	$(VJ_BASE_DIR)/@VJ_SHARE_DIR@/samples/Pf/advanced/nav \
			$(VJ_BASE_DIR)/@VJ_SHARE_DIR@/samples/tools	\
			$(VJ_BASE_DIR)/@VJ_SHARE_DIR@/samples/Pf/advanced/pfTools \
			$(VJ_BASE_DIR)/@VJ_SHARE_DIR@/samples/Pf/advanced/pfNav

DZR_BASE_DIR=	$(shell flagpoll doozer --get-prefix)
include $(DZR_BASE_DIR)/ext/vrjuggler/dzr.vrjuggler.mk
include $(DZR_BASE_DIR)/ext/vrjuggler/dzr.vrjuggler.pfapp.mk

EXTRA_INCLUDES+=	-I$(VJ_BASE_DIR)/@VJ_SHARE_DIR@/samples/Pf/advanced/nav \
			-I$(VJ_BASE_DIR)/@VJ_SHARE_DIR@/samples/Pf/advanced/pfNav \
			-I$(VJ_BASE_DIR)/@VJ_SHARE_DIR@/samples/Pf/advanced/pfTools

# -----------------------------------------------------------------------------
# Application build targets.
# -----------------------------------------------------------------------------
pfBasicConfigNav@EXEEXT@: $(OBJS)
	$(LINK) $(LINK_OUT)$@ $(OBJS) $(EXTRA_LIBS) $(LIBS)
