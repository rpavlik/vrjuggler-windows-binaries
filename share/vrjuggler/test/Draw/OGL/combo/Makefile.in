# -----------------------------------------------------------------------------
# Makefile.in for vrjuggler/test/Draw/OGL/combo
# This requires GNU make.
# -----------------------------------------------------------------------------

all: combo@EXEEXT@

APP_NAME=	combo@EXEEXT@

# Basic options.
srcdir=		@srcdir@
SRCS=		combo.cpp	\
		cubesApp.cpp	\
		torusApp.cpp	\
		wandApp.cpp	\
		PerfProbe.cpp	\
		Text.cpp

EXTRA_INCLUDES=		-I$(srcdir)/../cubes -I$(srcdir)/../torus	\
			-I$(srcdir)/../wand -I$(srcdir)/../perfAddon 
EXTRA_PATH_FOR_SOURCES=	$(srcdir)/../cubes $(srcdir)/../torus		\
			$(srcdir)/../wand $(srcdir)/../perfAddon

DZR_BASE_DIR=	$(shell flagpoll doozer --get-prefix)
include $(DZR_BASE_DIR)/ext/vrjuggler/dzr.vrjuggler.mk
include $(DZR_BASE_DIR)/ext/vrjuggler/dzr.vrjuggler.glapp.mk


# -----------------------------------------------------------------------------
# Application build targets.
# -----------------------------------------------------------------------------
combo@EXEEXT@: $(OBJS)
	$(LINK) $(LINK_OUT)$@ $(OBJS) $(EXTRA_LIBS) $(LIBS)
