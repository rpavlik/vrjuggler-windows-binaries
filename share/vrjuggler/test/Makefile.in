# -----------------------------------------------------------------------------
# Makefile.in for vrjuggler/test
#
# Generated for use on @PLATFORM@
# -----------------------------------------------------------------------------

SUBDIRS=	Cluster		\
		Draw		\
		PerfMon		\
		RTRC		\
		TestSuite

# -----------------------------------------------------------------------------
# Build targets.
# -----------------------------------------------------------------------------
default: TestSuite

# The 'bundle' target is only for use on Mac OS X with Cocoa.
all bundle:
	@for dir in $(SUBDIRS) ; do		\
            cd $$dir && $(MAKE) $@ || exit 1 ;	\
            cd .. ;				\
         done

$(SUBDIRS):
	cd $@ && $(MAKE)

# -----------------------------------------------------------------------------
# Clean-up.
# -----------------------------------------------------------------------------
clean clobber:
	@for dir in $(SUBDIRS) ; do			\
            echo "==> Cleaning in $$dir" ;		\
            cd $$dir && $(MAKE) $@ && cd .. || exit 1 ;	\
        done
